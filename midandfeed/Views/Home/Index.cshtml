@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<midandfeed.Models.News>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/teambuilder-wallpaper.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Project-Yasuo.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/morgana_vs_ahri_3.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Background.jpg" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row articles">
    @foreach (var item in Model)
    {
        <div class="col-md-4 article">
            <a asp-controller="News" asp-action="Details" asp-route-id="@item.ID">
                <img src="~/images/Project-Yasuo.jpg" class="img-rounded img-responsive"></a>
                <p class="img-comment"><b>Autor: </b>@Html.DisplayFor(modelItem => item.Autor) <b>Dátum vytvorenia: </b> @Convert.ToDateTime(item.CreatedAt).ToString("dd/MM/yyyy")</p>
                <div class="text-center"><h5>@Html.DisplayFor(modelItem => item.NewsName)</h5></div>
                <small>@Html.DisplayFor(modelItem => item.Body)</small>
</div>
    }
</div>
<div class="row">
    <div class="col-md-12 text-center">
        <ul class="pagination">
            <li class="previous"><a href="#fakelink" class="fui-arrow-left"></a></li>
            <li class="active"><a href="#fakelink">1</a></li>
            <li><a href="#fakelink">2</a></li>
            <li><a href="#fakelink">3</a></li>
            <li><a href="#fakelink">4</a></li>
            <li><a href="#fakelink">5</a></li>
            <li><a href="#fakelink">6</a></li>
            <li><a href="#fakelink">7</a></li>
            <li><a href="#fakelink">8</a></li>
            <li class="next"><a href="#fakelink" class="fui-arrow-right"></a></li>
        </ul>
    </div>
</div>